			<OnLoad>
				self:EnableMouse(true);
				self:RegisterForDrag("LeftButton");
			</OnLoad>
			<OnDragStart>
				if ( self.battleTag ) then
					ArenaLiveSpectatorWarGamePlayerCursorButton:SetPlayer(self.battleTag);
				end
			</OnDragStart>
		</Scripts>
	</Button>

